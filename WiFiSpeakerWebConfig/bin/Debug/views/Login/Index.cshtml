@section head { } @{ Layout = "MasterPage.cshtml"; }
<script type="text/javascript">
    $(document).ready(function () {
        $("#login").click(function () {
            $("#loginForm").submit();
        });
    });
</script>
@if (Model != null && Model.Errored)
{
    <div id="errorBox" class="floatingError">
        Invalid Username or Password
    </div>
}
@if (Model != null)
{
    <span>Model is not null</span>
}

<form id="loginForm" method="post" action="login">
    <div class="outer background-color">
        <div class="middle">
            <div class="inner">
                <div class="pad-top-bottom-sm col-lg-offset-4 col-lg-4 col-md-offset-3 col-md-6 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1 mypanel">
                    <div class="row">
                        <div class="col-md-12 text-center pad-bottom-lg">
                            <div>
                                <img src="~/assets/img/WifispeakerLogo.png" />
                                <h2 class="margin-sm">WiFi Speaker 2.0</h2>
                                <span class="hint">Login to configure your WiFiSpeaker Server</span>
                            </div>
                        </div>
                        <div>
                            <div class="col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-12 text-center">
                                <div class="col-xs-12">
                                    <input name="Username" type="text" class="col-md-12 col-xs-12" autocomplete="off" placeholder="Username">
                                    <span class="fa fa-2x fa-user left-icon" />
                                </div>

                                <div class="col-md-12 col-xs-12">
                                    <input name="Password" class="col-xs-12" type="password" autocomplete="off" placeholder="Password">
                                    <span class="fa fa-2x fa-lock left-icon" />
                                </div>
                                <a id="login" class="btn btn-blue-dark btn-md">
                                    <span class="btn-label">Login</span>
                                    <div class="btn-icon"><i class="icon-arrow">&nbsp;</i></div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>