@section head { } @{ Layout = "MasterPage.cshtml"; }
<form method="post" action="login">
<div class="col-md-12">
    <div class="row center-align">
        <div class="col-md-1 col-lg-1 col-sm-1 hidden-xs">
            Username
        </div>
        <div class="col-sm-3 col-md-3 col-lg-3">
            <input type="text" name="Username" placeholder="username" />
        </div>
        <div class="col-md-offset-8 col-sm-offset-8 col-lg-offset-8">
        </div>
    </div>
    <div class="row">
        Password
        <input name="Password" type="password" placeholder="password" />
    </div>
    <br />
    Remember Me
    <input name="RememberMe" type="checkbox" value="True" />
    <br />
    <input type="submit" value="Login" />
</div>
</form>
@if (Model != null && Model.Errored) {
<div id="errorBox" class="floatingError">
    Invalid Username or Password</div>
} 